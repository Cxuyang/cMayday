<!--pages/classic/classic.wxml-->
<view class="container">
  <view class="header">
    <v-episode class="episode" index="{{classic.index}}" />
    <v-like class="like" bind:like="onLike" islike="{{classic.like_status}}" count="{{classic.fav_nums}}"/>
  </view>
  <v-movie img="{{classic.image}}" content="{{classic.content}}"/>
   <v-navi title="{{classic.title}}" first="{{first}}" latest="{{latest}}" class="navi" />
</view>
